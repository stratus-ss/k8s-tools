# Include important files in the package
include README.md
include LICENSE
include pyproject.toml
include Makefile
include pytest.ini

# Include test files
recursive-include tests *.py
recursive-include tests *.txt
recursive-include tests *.md

# Include module data files if any
recursive-include modules *.yaml
recursive-include modules *.yml
recursive-include modules *.json

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst

# Exclude cache and build files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .pytest_cache
global-exclude *.egg-info
